generator client {
  provider = "prisma-client"
  output   = "./app/generated/prisma/client.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int       @id @default(autoincrement())
  name      String
  lastname  String
  email     String    @unique
  password  String
  phone     String
  createdAt DateTime  @default(now())
  profileImage String?

  products  Product[] // relation to products
}

model Product {
  id          Int      @id @default(autoincrement())
  userId      Int
  name        String
  description String?
  price       Float
  createdAt   DateTime @default(now())

  user        users    @relation(fields: [userId], references: [id])
}
